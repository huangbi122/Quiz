<h1>Trainers Team</h1>
<table class="spacing-table">
  <br />
  <br />
  <% unless @trainers.empty? %>
    <% @trainers.each do |trainer| %>
    <tr> <h4> <%= trainer.description %> </h4><tr>
    <hr style="border: 1px solid #A5A5A5;margin-top: 2px;margin-bottom: 0px;">
    <tr> <p style="font-style:oblique"><span class="glyphicon glyphicon-user"></span> <%= trainer.name %> </tr>
    <tr> <p style="font-style:oblique"><a href= "<%=trainer.email%>" target="_top"><span class="glyphicon glyphicon-envelope"> <%=
     trainer.email %> </span></a></p> </tr>
    <tr> <p style="font-style:oblique"><span class="glyphicon glyphicon-phone-alt"></span> <%= trainer.phone %></p></tr>
  </br>
    <% end %>
  <% end %>
  </tr>
</table>
